{
  "manifest_version": 3,
  "name": "Phishing Detector Pro",
  "version": "2.0", 
  "description": "AI-powered phishing email detector for Gmail, Outlook, and Yahoo Mail. Real-time protection with risk assessment.",
  "permissions": [
    "activeTab",  
    "scripting", 
    "storage"       
  ],
  "host_permissions": [
    "https://web-production-a4be2.up.railway.app/*",
    "https://*.mail.google.com/*",
    "https://outlook.live.com/*",
    "https://mail.yahoo.com/*"
  ],
  "background": {
    "service_worker": "background.js" 
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png", 
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png", 
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*", "*://outlook.live.com/*", "*://mail.yahoo.com/*"], 
      "js": ["content.js"] 
    }
  ]
}