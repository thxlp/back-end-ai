{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "version": "1.2",
  "description": "Scans email content for phishing indicators using a custom AI model.",
  "permissions": [
    "activeTab",  
    "scripting", 
    "storage"       
  ],
  "host_permissions": [
    "https://web-production-a4be2.up.railway.app/*",
    "https://*.mail.google.com/*",
    "https://outlook.live.com/*",
    "https://mail.yahoo.com/*"
  ],
  "background": {
    "service_worker": "background.js" 
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "extenicon.jpg",
      "32": "extenicon.jpg", 
      "48": "extenicon.jpg",
      "128": "extenicon.jpg"
    }
  },
  "icons": {
    "16": "extenicon.jpg",
    "32": "extenicon.jpg",
    "48": "extenicon.jpg", 
    "128": "extenicon.jpg"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*", "*://outlook.live.com/*", "*://mail.yahoo.com/*"], 
      "js": ["content.js"] 
    }
  ]
}